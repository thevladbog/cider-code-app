{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "allowJs": true,
    "module": "commonjs",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/assets/*": ["src/assets/*"],
      "@app/*": ["src/app/*"]
    },
    "jsx": "react-jsx",
    "strict": true,
    "noEmit": false,
    "incremental": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*", "typings.d.ts", "src/global.d.ts"],
  "exclude": ["node_modules", "dist", ".webpack"]
}
