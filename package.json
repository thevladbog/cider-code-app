{
  "name": "bottle-code-app",
  "productName": "Bottle Code App",
  "version": "1.0.0-beta.18",
  "description": "Система агрегации в транспортные короба",
  "main": "dist/index.js",
  "type": "commonjs",
  "scripts": {
    "start": "npx electron-forge start",
    "start:dev": "cross-env NODE_ENV=development npx electron-forge start",
    "package": "npx electron-forge package",
    "make": "npx electron-forge make",
    "clean": "rimraf ./out && rimraf ./dist",
    "make:win": "npm run build:main && npm run build:renderer && electron-builder --config electron-builder.yml --win --publish never",
    "make:linux": "npm run build:main && npm run build:renderer && electron-builder --config electron-builder.yml --linux --publish never",
    "make:mac": "npm run build:main && npm run build:renderer && electron-builder --config electron-builder.yml --mac --publish never",
    "publish:win": "electron-builder --config electron-builder.yml --win --publish always",
    "publish:linux": "electron-builder --config electron-builder.yml --linux --publish always",
    "publish:mac": "electron-builder --config electron-builder.yml --mac --publish always",
    "publish": "npx electron-forge publish",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prettier": "prettier --check .",
    "prettier:fix": "prettier --write .",
    "format": "npm run prettier:fix && npm run lint:fix",
    "rebuild": "electron-rebuild",
    "sync-deps": "npm install --package-lock-only",
    "semantic-release": "semantic-release",
    "generate-api-client": "curl -k -o ./src/app/api/openapi.yaml https://api.test.in.bottlecode.app:3035/api/yaml && openapi --input ./src/app/api/openapi.yaml --output ./src/app/api/generated --client axios --useOptions --useUnionTypes",
    "build:renderer": "vite build --config vite.renderer.config.ts",
    "build:main": "tsc",
    "dist": "npm run build:main && npm run build:renderer && electron-builder --config electron-builder.yml",
    "dist:rebuild": "npm run clean && npm run build:main && npm run build:renderer && npm rebuild && electron-builder --config electron-builder.yml"
  },
  "keywords": [],
  "author": {
    "name": "Vladislav Bogatyrev",
    "email": "vladislav.bogatyrev@gmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-conventional": "^18.4.4",
    "@electron-forge/cli": "^7.8.1",
    "@electron-forge/maker-deb": "^7.8.1",
    "@electron-forge/maker-dmg": "^7.8.1",
    "@electron-forge/maker-squirrel": "^7.8.1",
    "@electron-forge/maker-zip": "^7.8.1",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.1",
    "@electron-forge/plugin-fuses": "^7.8.1",
    "@electron-forge/plugin-vite": "^7.8.1",
    "@electron/fuses": "^1.8.0",
    "@eslint/js": "^9.27.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^11.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.2.6",
    "@semantic-release/npm": "^11.0.2",
    "@semantic-release/release-notes-generator": "^12.1.0",
    "@types/node": "^22.15.31",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.5.2",
    "cross-env": "^7.0.3",
    "electron": "36.2.1",
    "electron-builder": "^26.0.12",
    "eslint": "^9.27.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "openapi-typescript-codegen": "^0.29.0",
    "rimraf": "^6.0.1",
    "sass": "^1.89.0",
    "semantic-release": "^22.0.12",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1",
    "vite": "^6.3.5",
    "vite-plugin-node-polyfills": "^0.23.0"
  },
  "dependencies": {
    "@gravity-ui/date-components": "^3.1.1",
    "@gravity-ui/date-utils": "^2.5.6",
    "@gravity-ui/icons": "^2.13.0",
    "@gravity-ui/uikit": "^7.12.0",
    "@tanstack/react-query": "^5.76.2",
    "axios": "^1.9.0",
    "classnames": "^2.5.1",
    "electron-squirrel-startup": "^1.0.1",
    "jsbarcode": "^3.11.6",
    "prettier": "^3.5.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-refresh": "^0.14.0",
    "react-router-dom": "^7.6.0",
    "serialport": "^10.5.0",
    "usb": "^2.15.0",
    "zustand": "^5.0.5"
  },
  "optionalDependencies": {
    "@rollup/rollup-darwin-arm64": "^4.0.0",
    "@rollup/rollup-darwin-x64": "^4.0.0",
    "@rollup/rollup-linux-arm64-gnu": "^4.0.0",
    "@rollup/rollup-linux-x64-gnu": "^4.0.0",
    "@rollup/rollup-win32-x64-msvc": "^4.0.0"
  }
}
